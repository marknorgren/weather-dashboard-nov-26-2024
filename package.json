{
  "name": "weather-dashboard",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "playwright": "playwright test",
    "playwright:debug": "playwright test --debug",
    "test:e2e:dev": "vite",
    "test:e2e:test": "wait-on http://localhost:5175 && npm run playwright",
    "test:e2e": "npm run kill-port && concurrently \"npm run test:e2e:dev\" \"npm run test:e2e:test\"",
    "typecheck": "tsc",
    "kill-port": "lsof -ti:5175 | xargs kill -9 || true",
    "nuke": "rm -rf node_modules .vite dist package-lock.json && npm cache clean --force && npm install"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "chart.js": "^4.4.6",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^6.28.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.34.3",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.0",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "playwright": "^1.34.3",
    "postcss": "^8.4.38",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.1.6",
    "vite": "^5.1.0",
    "vite-tsconfig-paths": "^4.2.1",
    "wait-on": "^8.0.1"
  }
}
